<h1>Faculties#edit</h1>

<h1>Faculties edit form</h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style="color: red"><%= error%></p>
    <%end%>
<%end%>
<% if flash[:notice] %> 
      <% flash.each do |name,msg| %>
        <p style="color:green;"><%= msg %></p>
      <% end %>
<% end %>

<%= form_with(model: @faculty, local: true) do |f|%>
    <%= f.label :first_name %>
    <%= f.text_field :first_name%>
    <%= f.label :last_name %>
    <%= f.text_field :last_name%>
    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth%>
    <%= f.label :phone %>
    <%= f.number_field :phone%>
    <%= f.label :email %>
    <%= f.text_field :email%>
    <%= f.label :designation %>
    <%= f.text_field :designation%>

    <%= f.submit%>
<%end%>


<p>Find me in app/views/faculties/edit.html.erb</p>
